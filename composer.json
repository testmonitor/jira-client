{
    "name": "testmonitor/jira-client",
    "description": "The TestMonitor Jira Client.",
    "type": "library",
    "keywords": [
        "testmonitor",
        "jira",
        "client"
    ],
    "authors": [
        {
            "name": "Thijs Kok",
            "email": "tkok@testmonitor.com",
            "homepage": "https://www.testmonitor.com/",
            "role": "Lead Developer"
        },
        {
            "name": "Stephan Grootveld",
            "email": "sgrootveld@testmonitor.com",
            "homepage": "https://www.testmonitor.com/",
            "role": "Developer"
        },
        {
            "name": "Frank Keulen",
            "email": "fkeulen@testmonitor.com",
            "homepage": "https://www.testmonitor.com/",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "damienharper/adf-tools": "^1.0",
        "devmoath/jql-builder": "^1.4",
        "guzzlehttp/guzzle": "^7.0",
        "league/oauth2-client": "^2.7",
        "mrjoops/oauth2-jira": "^0.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.1",
        "mockery/mockery": "~1.0",
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "scrutinizer/ocular": "^1.9"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "TestMonitor\\Jira\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TestMonitor\\Jira\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "prefer-stable": true,
    "license": "MIT"
}